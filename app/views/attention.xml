			<ItemTemplate id="attention" name="attention">
				<ImageView bindId="photo" id="photo"/>
				<View id="shadow"/>
				<View bindId="curator" id="curator"/>
				<Label bindId="name" id="name"/>
				<Label bindId="title" id="title"/>
				<View id="belt"/>
				<Label bindId="message" id="message"/>
				<Label bindId="location" id="location"/>
